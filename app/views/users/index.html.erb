<html>
  <head>
      <style>
           fieldset {
           background: lightblue;
           border: 8px solid yellow;
           width: 1140px;          
           }
    </style>
  </head>
  
  
<body>
<h1>Listing Users</h1>
<br>
<br>
<form action=users method="get" id="userform">
  
<fieldset>
<h3 class="sub-header">Choose groups you want: </h3>
<label for="membership">Membership:</label>
<select name="membership" form="userform">
<option></option>            
<option value="Yes">Yes</option>
<option value="No">No</option>
</select>


<label for="classification">Classification:</label>
<select name=classification[] form="userform" multiple="multiple">
  <option value="Freshman">Freshman</option>
  <option value="Sophomore">Sophomore</option>
  <option value="Junior">Junior</option>
  <option value="Senior">Senior</option>
  <option value="Graduate">Graduate</option>
  <option value="PhD">PhD</option>
  <option>Cmd for Multi-Choice</option>
</select>


<h>Dynasty</h>
<select name=classification[] form="userform" multiple="multiple">
  <option value="Tang">Tang</option>
  <option value="Song">Song</option>
  <option value="Qing">Qing</option>
  <option value="Shang">Shang</option>
  <option value="Han">Han</option>
  <option>Cmd for Multi-Choice</option>
</select>

<input name="search" type="Submit" value="Search">
<input name="reset" type="Submit" value="Reset">
</fieldset>
</form>
<br>
<br>
<br>

<fieldset>
<h3 class="sub-header">Details</h3>
<div class="table-responsive">
<table class="table table-striped">
<thead>
    <tr>
      <th>Name</th>
      <th>Uin</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Membership</th>
      <th>Shirt</th>
      <th>Classification</th>
      <th>Dynasty</th>
      <th colspan="3"></th>
    </tr>
</thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.uin %></td>
        <td><%= user.tel %></td>
        <td><%= user.email %></td>
        <td><%= user.membership %></td>
        <td><%= user.shirt %></td>
        <td><%= user.classification %></td>
        <td><%= user.dynasty %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</fieldset>

<br>

<p><%= link_to 'New User', new_user_path %></p>
<p><%= link_to "back to dashborad", static_pages_adminhome_path %></p>
