<h1>Report</h1>
<form action=report method="get" id="userform">
<h>Classification</h>
<select name=classification[] form="userform" multiple="multiple">
  <option value="Freshman">Freshman</option>
  <option value="Sophomore">Sophomore</option>
  <option value="Junior">Junior</option>
  <option value="Senior">Senior</option>
  <option value="Graduate">Graduate</option>
  <option value="PhD">PhD</option>
  <option>Cmd for Multi-Choice</option>
</select>
<h>Dynasty</h>
<select name=dynasty[] form="userform" multiple="multiple">
  <option value="Tang">Tang</option>
  <option value="Song">Song</option>
  <option value="Shang">Shang</option>
  <option value="Qing">Qing</option>
  <option>Cmd for Multi-Choice</option>
</select>
<input name=search type="Submit" value="Search">
<input name=reset type="Submit" value="Reset">
</form>


<h2 class="sub-header">Detail</h2>
<div class="table-responsive">
<table class="table table-striped">
<thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>

      <th colspan="3"></th>
    </tr>
</thead>

  <tbody>
    <% @report.each do |report| %>
      <tr>
        <td><%= report[0] %></td>
        <td><%= report[1]%></td>
      </tr>
    <% end %>
  </tbody>
</table>